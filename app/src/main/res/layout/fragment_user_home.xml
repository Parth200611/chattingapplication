<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="16dp"
        android:text="All Your Friends Are Here"
        android:textColor="@color/lavender"
        android:textStyle="bold"

        android:textSize="24dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="start texting with your family and friends!!"
        android:textColor="#B4B3B3"
        android:layout_marginBottom="6dp"
        android:textSize="14dp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvLsit"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Friend"
        android:textColor="#ABB1B6"
        android:textStyle="bold"
        android:textSize="28dp"
        android:id="@+id/tvNoRequest"
        android:gravity="center"
        android:visibility="gone"

        />


</LinearLayout>